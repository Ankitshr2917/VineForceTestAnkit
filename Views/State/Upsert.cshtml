@model VineForceTestAnkit.Models.Vm.StateVM
@{
    var title = Model.StatewithCounrtry.id != 0 ? "Edit Country" : "New Country";
    var btn = Model.StatewithCounrtry.id != 0 ? "Update" : " Save";
}

<div class="row">
    <div class="col-8">
        <h3>@title</h3>
    </div>
    <div class="col-4">
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</div>


<form method="post">

    <div class="row border m-2  ">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="   form-group row p-2 m-2 ">
            <div class="col-4    ">
                <label asp-for="StatewithCounrtry.Countryid" class="text-center"></label>
            </div>
            <div class="col-6">
               @Html.DropDownListFor(x=>x.StatewithCounrtry.Countryid,Model.CountryList,"Select Country",new{@class="form-control"})
                <span asp-validation-for="StatewithCounrtry.Countryid" class="text-danger"></span>
            </div>
        </div>


        <div class="   form-group row p-2 m-2 ">
            <div class="col-4    ">
                <input asp-for="StatewithCounrtry.id" hidden />
                <label asp-for="StatewithCounrtry.Name" class="text-center"></label>
            </div>
            <div class="col-6">
                <input asp-for="StatewithCounrtry.Name" class="form-control" />
                <span asp-validation-for="StatewithCounrtry.Name" class="text-danger"></span>
            </div>
        </div>

        <div>

            <div class="row">
                <div class="col-4 offset-4 ">
                    <input type="submit" class="btn btn-info form-control" value="@btn" />
                </div>
                <div class="col-4">
                    <a asp-action="CountryList" class="btn btn-success form-control ">Back</a>
                </div>
            </div>


        </div>

    </div>
</form>